@model ContentManagementSystem.Admin.Models.UsersListModel
@{
    PageTitle = "Users";
}

<table>
    <thead>
        <tr>
            <th class="text-left">Page Title</th>
            <th class="text-left">Location</th>
            <th class="text-left date-with-name-column">Last Updated</th>
            <th class="text-right options-column">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var user in Model.Users )
        { 
            <tr>
                <td class="text-left">
                    @user.Username
                </td>
                <td class="text-left">
                    @user.EmailAddress
                </td>
                <td class="text-left date-with-name-column">
                    @user.LastLogin.ToString( "dddd dd/MM/yyyy hh:mm tt" )
                </td>
                <td class="text-right options-column">
                    <a href="@Url.Action( "ViewUser", "User", new { Area = "Admin", id = user.UserId } )" class="table-button">Edit</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4"></td>
        </tr>
    </tfoot>
</table>

<a href="@Url.Action( "Create", "Uploads", new { Area = "Admin" } )" class="button primary">Upload New File</a>