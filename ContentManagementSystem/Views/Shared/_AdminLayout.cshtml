<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@PageTitle</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render( "~/Content/admincss" )
        <script type="text/javascript">
            var CKEDITOR_BASEPATH = '/content/scripts/plugins/ckeditor/';
        </script>
        @Scripts.Render( "~/bundles/external" )
        @Scripts.Render( "~/bundles/siteadmin" )
        @Scripts.Render( "~/bundles/site" )
        <script type="text/javascript" src="http://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
        <link rel="stylesheet" href="http://code.jquery.com/ui/1.11.4/themes/blitzer/jquery-ui.css" />
    </head>
    <body class="admin">
        <header class="always-open">
            <nav>
                <div class="nav-content">
                    @using ( BeginUrlForm( "/logoff" ) )
                    {
                        @Html.AntiForgeryToken()
                        <span onclick="$(this).parent().submit();" class="logged-in-button">
                            <span class="icon">
                                    <i class="icon fa fa-sign-out"></i>
                                </span>
                            <span class="text">Logout</span>
                        </span>
                    }
                    <ul id="menu" class="off">
                        <li class="off">
                            <div class="nav-link">
                                <a href="/">Site Home</a>
                            </div>
                        </li>
                        <li class="off">
                            <div class="nav-link">
                                <a href="/admin">Admin Home</a>
                            </div>
                        </li>
                        <li class="off">
                            <div class="nav-link">
                                <div class="sub-nav-selector">
                                    <i class="fa fa-angle-right"></i>
                                    <div class="sub-nav">
                                        <ul>
                                            <li>
                                                <div class="nav-link">
                                                    <a href="/admin/navigation/list">Edit nav items</a>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="nav-link">
                                                    <a href="/admin/navigation/create">Add new nav item</a>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <a href="/admin/navigation/list">Nav Items</a>
                            </div>
                        </li>
                        <li class="off">
                            <div class="nav-link">
                                <div class="sub-nav-selector">
                                    <i class="fa fa-angle-right"></i>
                                    <div class="sub-nav">
                                        <ul>
                                            <li>
                                                <div class="nav-link">
                                                    <a href="/admin/page/list">View pages</a>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="nav-link">
                                                    <a href="/admin/page/create">Add new page</a>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <a href="/admin/page/list">Pages</a>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="copy-right text-center">
                    <p>&copy; @DateTime.Now.Year - Stephen Barnes</p>
                </div>
            </nav>
            <div class="menu-link">
                <span></span>
            </div>
        </header>
        <div class="page-content">
            <div id="body" class="content-wrapper">
                <section class="main-content clear-fix">
                    <div class="page-content-wrapper">
                        @RenderBody()
                    </div>
                </section>
            </div>
        </div>
        @RenderSection("scripts", required: false)
        <script>
            var _site;

            $(function ()
            {
                _site = new apollyon.Site();
            });
        </script>
    </body>
</html>
