@{
    PageTitle = "Admin";
}

@helper RenderStandardAdminTiles( string title, string controller )
{
    <li>
        <div class="admin-link-title"><h3>@title</h3></div>
        <div class="admin-link">
            <a href="@Url.Action( "List", controller, new { area="Admin" } )">
                <div>
                    <span class="admin-link-icon"><i class="fa fa-edit"></i></span>
                    <span class="admin-link-text">Manage</span>
                </div>
            </a>
        </div>
        <div class="admin-link">
            <a href="@Url.Action( "Create", controller, new { area="Admin" } )">
                <div>
                    <span class="admin-link-icon"><i class="fa fa-plus"></i></span>
                    <span class="admin-link-text">Add</span>
                </div>
            </a>
        </div>
    </li>
}

@helper RenderManageAdminTile( string title, string controller )
{
    <li>
        <div class="admin-link-title"><h3>@title</h3></div>
        <div class="admin-link single">
            <a href="@Url.Action( "List", controller, new { area="Admin" } )">
                <div>
                    <span class="admin-link-icon"><i class="fa fa-edit"></i></span>
                    <span class="admin-link-text">Manage</span>
                </div>
